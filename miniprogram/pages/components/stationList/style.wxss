.station-item.active {
	background: url(../../../images/station_select.png) no-repeat top right;
	background-size: 44rpx;
	border-color: #ed422f;
}

.station-chosen {
	background: url(../../../images/station_select.png) no-repeat top right;
	border-color: #ed422f;
}
