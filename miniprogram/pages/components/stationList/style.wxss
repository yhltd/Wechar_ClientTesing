.station-list {
	padding: 40rpx;
}

.station-wrapper {
	width: 100%;
	margin-bottom: 40rpx;
}

.station-title {
	text-align: center;
	margin-bottom: 40rpx;
}

.station-item {
	display: inline-block;
	width: 40%;
	margin: 20rpx;
	border: 2rpx solid #c3c3c3;
	border-radius: 10%;
/*	color: #999;*/
	font-size: 32rpx;
	padding: 20rpx 10rpx;
	text-align: center;
}

